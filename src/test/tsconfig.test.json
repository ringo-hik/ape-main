{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "../..",
    "types": ["node", "mocha"],
    "typeRoots": [
      "./types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "./**/*.ts",
    "../**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}