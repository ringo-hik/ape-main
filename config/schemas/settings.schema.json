{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "internalPlugins": {
      "type": "object",
      "properties": {
        "git": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Git 플러그인 활성화 여부",
              "default": true
            },
            "useLocalGit": {
              "type": "boolean",
              "description": "로컬 Git 구성 사용 여부 (.git 폴더)",
              "default": true
            },
            "autoCommitMessage": {
              "type": "boolean",
              "description": "LLM을 사용하여 커밋 메시지 자동 생성",
              "default": true
            },
            "commitMessageModel": {
              "type": "string",
              "description": "커밋 메시지 생성에 사용할 LLM 모델 (기본값: defaultModel)",
              "default": ""
            },
            "defaultBranch": {
              "type": "string",
              "description": "기본 브랜치",
              "default": "master"
            },
            "commitMessageTemplate": {
              "type": "string",
              "description": "커밋 메시지 템플릿",
              "default": "{{type}}: {{subject}}\n\n{{body}}"
            },
            "credentials": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "description": "GitHub 사용자 이름 (로컬 설정이 없는 경우)"
                },
                "token": {
                  "type": "string",
                  "description": "GitHub 개인 액세스 토큰 (로컬 설정이 없는 경우)"
                }
              }
            },
            "remotes": {
              "type": "object",
              "additionalProperties": {
                "type": "string",
                "description": "원격 저장소 URL"
              },
              "description": "원격 저장소 목록 (로컬 설정이 없는 경우)"
            }
          }
        },
        "jira": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Jira 플러그인 활성화 여부",
              "default": true
            },
            "baseUrl": {
              "type": "string",
              "description": "Jira 기본 URL"
            },
            "credentials": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "description": "Jira API 토큰"
                },
                "username": {
                  "type": "string", 
                  "description": "Jira 사용자 이름"
                }
              }
            }
          }
        },
        "swdp": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "SWDP 플러그인 활성화 여부",
              "default": true
            },
            "baseUrl": {
              "type": "string",
              "description": "SWDP 기본 URL"
            },
            "credentials": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "description": "SWDP API 토큰"
                }
              }
            }
          }
        }
      }
    },
    "core": {
      "type": "object",
      "properties": {
        "sslBypass": {
          "type": "boolean",
          "description": "SSL 인증서 검증 우회 (온프레미스 환경용)",
          "default": true
        },
        "logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "로그 레벨"
        },
        "allow": {
          "type": "object",
          "properties": {
            "all": {
              "type": "boolean",
              "description": "모든 권한 허용",
              "default": false
            },
            "ssl_bypass": {
              "type": "boolean",
              "description": "SSL 우회 권한",
              "default": true
            },
            "file_system": {
              "type": "boolean",
              "description": "파일 시스템 접근 권한",
              "default": true
            },
            "network": {
              "type": "boolean",
              "description": "네트워크 접근 권한",
              "default": true
            },
            "terminal": {
              "type": "boolean",
              "description": "터미널 접근 권한",
              "default": true
            },
            "clipboard": {
              "type": "boolean",
              "description": "클립보드 접근 권한",
              "default": true
            },
            "notifications": {
              "type": "boolean",
              "description": "알림 권한",
              "default": true
            }
          }
        }
      }
    },
    "llm": {
      "type": "object",
      "properties": {
        "defaultModel": {
          "type": "string",
          "description": "기본적으로 사용할 LLM 모델 ID",
          "default": "gemini-2.5-flash"
        },
        "openrouterApiKey": {
          "type": "string",
          "description": "OpenRouter API 키"
        },
        "openaiApiKey": {
          "type": "string",
          "description": "OpenAI API 키"
        },
        "anthropicApiKey": {
          "type": "string",
          "description": "Anthropic API 키"
        },
        "azureApiKey": {
          "type": "string",
          "description": "Azure OpenAI API 키"
        },
        "models": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "모델 표시 이름"
              },
              "provider": {
                "type": "string",
                "enum": ["openai", "anthropic", "ollama", "azure", "openrouter", "local", "custom"],
                "description": "모델 제공자"
              },
              "apiKey": {
                "type": "string",
                "description": "모델별 API 키 (선택 사항)"
              },
              "apiUrl": {
                "type": "string",
                "description": "모델별 API URL (선택 사항)"
              },
              "apiModel": {
                "type": "string",
                "description": "API 요청 시 사용할 정확한 모델 ID (예: google/gemini-2.5-flash-preview)"
              },
              "contextWindow": {
                "type": "number",
                "description": "컨텍스트 창 크기 (최대 토큰 수)"
              },
              "maxTokens": {
                "type": "number",
                "description": "응답 생성 최대 토큰 수"
              },
              "temperature": {
                "type": "number",
                "description": "응답 다양성 (0.0~1.0)",
                "minimum": 0,
                "maximum": 1,
                "default": 0.7
              },
              "systemPrompt": {
                "type": "string",
                "description": "기본 시스템 프롬프트"
              }
            },
            "required": ["name", "provider"]
          },
          "description": "사용 가능한 LLM 모델 정의"
        }
      }
    },
    "agents": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true,
            "description": "에이전트 활성화 여부"
          },
          "name": {
            "type": "string",
            "description": "에이전트 이름"
          },
          "description": {
            "type": "string",
            "description": "에이전트 설명"
          },
          "endpoint": {
            "type": "string",
            "description": "API 엔드포인트"
          },
          "apiKey": {
            "type": "string",
            "description": "API 키"
          },
          "noProxy": {
            "type": "boolean",
            "description": "프록시 사용 여부",
            "default": false
          },
          "credentials": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["token", "basic", "oauth"],
                "description": "인증 타입"
              },
              "token": {
                "type": "string",
                "description": "API 토큰 (토큰 인증 시)"
              },
              "username": {
                "type": "string",
                "description": "사용자 이름 (기본 인증 시)"
              },
              "password": {
                "type": "string",
                "description": "비밀번호 (기본 인증 시)"
              },
              "clientId": {
                "type": "string",
                "description": "OAuth 클라이언트 ID (OAuth 인증 시)"
              },
              "clientSecret": {
                "type": "string",
                "description": "OAuth 클라이언트 시크릿 (OAuth 인증 시)"
              }
            },
            "required": ["type"]
          }
        }
      }
    },
    "plugins": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true,
            "description": "플러그인 활성화 여부"
          },
          "name": {
            "type": "string",
            "description": "플러그인 이름"
          },
          "description": {
            "type": "string",
            "description": "플러그인 설명"
          },
          "version": {
            "type": "string",
            "description": "플러그인 버전"
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "명령어 이름"
                },
                "description": {
                  "type": "string",
                  "description": "명령어 설명"
                },
                "syntax": {
                  "type": "string",
                  "description": "명령어 문법"
                },
                "examples": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "명령어 예시"
                },
                "api": {
                  "type": "object",
                  "properties": {
                    "endpoint": {
                      "type": "string",
                      "description": "API 엔드포인트"
                    },
                    "method": {
                      "type": "string",
                      "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"],
                      "default": "GET",
                      "description": "HTTP 메서드"
                    },
                    "headers": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "string"
                      },
                      "description": "HTTP 헤더"
                    },
                    "body": {
                      "type": "object",
                      "description": "요청 본문"
                    }
                  },
                  "required": ["endpoint"]
                }
              },
              "required": ["name", "api"]
            }
          },
          "endpoint": {
            "type": "string",
            "description": "기본 API 엔드포인트"
          },
          "apiKey": {
            "type": "string",
            "description": "기본 API 키"
          },
          "noProxy": {
            "type": "boolean",
            "description": "프록시 사용 여부",
            "default": false
          }
        },
        "required": ["name", "commands"]
      }
    }
  }
}